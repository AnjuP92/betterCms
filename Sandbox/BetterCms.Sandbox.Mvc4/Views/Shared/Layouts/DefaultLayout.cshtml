@using BetterCms.Module.Root.Mvc.Helpers
@using BetterCms.Module.Installation
@model BetterCms.Core.DataContracts.IPage
@{
    Layout = "~/Areas/bcms-Root/Views/Shared/BaseLayout.cshtml";
    ViewBag.googleAppid = System.Configuration.ConfigurationManager.AppSettings["googleAppId"];

    ViewBag.facebookid = System.Configuration.ConfigurationManager.AppSettings["facebookAppId"];
}

@section Styles {    
    @RenderSection("Styles", false)
    @(Html.RenderStyleSheets<InstallationModuleDescriptor>())
}

@section HeadScripts {
    @RenderSection("HeadScripts", false)
}
<link rel="stylesheet" href="/file/bcms-installation/content/styles/bootstrap.css" />
<script src="/file/bcms-installation/Scripts/jquery.min.js"></script>
<script src="/file/bcms-installation/Scripts/js/bootstrap.min.js"></script>


<div class="page" style="min-width:200px !important;">

    <header class="page-header">
        <div class="clearfix container">
            <div>
                @RenderSection("CMSHeader", true)
            </div>
        </div>
    </header>

    <div class="page-block container">
        <div class="learfix container">
            @RenderSection("CMSMainContent", false)
            @RenderBody()
        </div>
    </div>

</div>

<footer class="container">
    <div class="clearfix container">
        @RenderSection("CMSFooter", false)
    </div>
</footer>
<style>
     @@media (min-width: 400px) and (max-width: 767px) {
         .container {
        width: 400px;
    }
</style>